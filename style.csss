/* Common transition styles */
body {
  margin: 0;
  overflow: hidden;
}

.page {
  position: fixed;
  top: 0;
  left: 100%;
  width: 100%;
  height: 100%;
  background: #f4f4f4;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: transform 0.5s ease-in-out;
}

.page h1 {
  font-family: Arial, sans-serif;
  font-size: 2rem;
  color: #333;
}

.page.active {
  transform: translateX(-100%);
}

.page.previous {
  transform: translateX(0%);
}
